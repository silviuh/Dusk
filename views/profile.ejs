<!DOCTYPE html>
<html lang="en">

<body>

    <div class="wrapper">
        <div class="left">
            <h1><i class="fas fa-user-circle"></i>
            </h1>
            <br>
            <% if(typeof userName !='undefined' ){ %>
                <h3>
                    <%= userName %>
                </h3>
                <% } %>
                <br>
                <hr>
                <br>
                    <h4>Basic Flask User</h4>
        </div>
        <div class="right">
            <div class="info">
                <h3>Information</h3>
                <div class="info_data">
                    <div class="data">
                        <h4>Firstname</h4>
                        <% if(typeof firstName !='undefined' ){ %>
                            <p>
                                <%= firstName %>
                                    <p>
                                <% } %>
                    </div>
                    <div class="data">
                        <h4>Lastname</h4>
                        <% if(typeof lastName !='undefined' ){ %>
                            <p>
                                <%= lastName %>
                                    <p>
                                <% } %>
                    </div>
                </div>
            </div>

            <div class="projects">
                <h3>Friends</h3>
                <div class="projects_data">
                    <div class="btn">
                        <button>See friends</button>
                    </div>
                    <div class="btn">
                        <button>Add friends</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>